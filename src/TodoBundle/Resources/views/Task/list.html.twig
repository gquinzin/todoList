{% extends 'base.html.twig' %}

{% block body %}
    <h2>{% trans %} homepage.tasks.title {% endtrans %}</h2>

    <table class="table table-striped table-hover">
        {%  for task in tasks %}
        <tr><td> {{ task.label }} </td></tr>
        {% else  %}
        <tr><td> {% trans %} task.empty_list {% endtrans %} </td></tr>
        {% endfor %}
    </table>
{%  endblock %}