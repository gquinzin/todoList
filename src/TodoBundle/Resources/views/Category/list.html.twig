{% extends 'base.html.twig' %}

{% block body %}
    <h2>{% trans %} homepage.categories.title {% endtrans %}</h2>

    <table class="table table-striped table-hover">
        {%  for category in categories %}
        <tr>
            <td>
                <a href="{{ path('list_task_category', {id: category.id}) }}"> {{ category.name }} </a>
            </td>
        </tr>
        {% else  %}
        <tr><td> {% trans %} category.empty_list {% endtrans %} </td></tr>
        {% endfor %}
    </table>
{%  endblock %}